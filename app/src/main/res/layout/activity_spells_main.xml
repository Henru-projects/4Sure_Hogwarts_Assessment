<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SpellsMain">

    <TextView
        android:id="@+id/lblSpellsMain"
        android:layout_width="100dp"
        android:layout_height="62dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="232dp"
        android:layout_marginRight="232dp"
        android:text="Spells: "
        android:textColor="#140202"
        android:textSize="50sp"
        app:fontFamily="@font/harry_potter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnLoadSpells"
        android:layout_width="119dp"
        android:layout_height="59dp"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="63dp"
        android:layout_marginRight="63dp"
        android:text="Load Spells"
        android:textColor="#0A0000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/lblSpellsMain"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="354dp"
        android:layout_height="571dp"
        android:layout_marginStart="27dp"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblSpellsMain">

        <TextView
            android:id="@+id/lblSpellData"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/btnLoadSpells"
            android:hint="Data display here"
            android:textColor="#0A0000"
            android:textSize="18sp"
            app:fontFamily="@font/harry_potter" />
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>